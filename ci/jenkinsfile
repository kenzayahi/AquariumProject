pipeline {
    agent any
    stages {
        stage ('Build') {
            steps {
                sh'mvn clean package'
            }
        }
        stage ('Copy Jar') {
            steps {
                sh'sh -c "cp target/fr-0.0.1-SNAPSHOT.jar /home/kenyahi/Documents/DeOps/bin/"'
            }
        }
        stage ('Deploy Jar') {
            steps {
                sh'sh -c "java -jar /home/kenyahi/Documents/DeOps/bin/fr-0.0.1-SNAPSHOT.jar"'
            }
        }
    }
}
