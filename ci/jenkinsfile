pipeline {
    agent any
    stages {
        stage ('Build') {
            steps {
                sh'mvn clean package'
            }
        }
        stage ('Copy App') {
            steps {
                sh'sh -c "cp target/fr-0.0.1-SNAPSHOT.jar /home/kenyahi/Documents/DeOps/bin/"'
            }
        }
        stage ('Shutdown Current App') {
            steps {
                sh'sh -c "curl -x POST http://localhost:8080/actuator/shutdown"'
            }
        }
        stage ('Deploy App') {
            steps {
                sh'sh -c "java -jar /home/kenyahi/Documents/DeOps/bin/fr-0.0.1-SNAPSHOT.jar > /home/kenyahi/Documents/DeOps/bin/out.log &"'
            }
        }
    }
}
